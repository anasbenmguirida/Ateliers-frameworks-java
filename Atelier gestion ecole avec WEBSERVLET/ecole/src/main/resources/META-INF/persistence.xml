<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="pu_gestion_academique" transaction-type="RESOURCE_LOCAL">

        <!-- Liste EXPLICITE de toutes vos entités -->
        <class>org.example.ecole.Model.Eleve</class>
        <class>org.example.ecole.Model.Filiere</class>
        <class>org.example.ecole.Model.Cour</class>
        <class>org.example.ecole.Model.DossierAdministratif</class>
        <class>org.example.ecole.Model.CoursFiliere</class>
        <class>org.example.ecole.Model.CoursFiliereId</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/gestion_academique?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <!-- IMPORTANT: Forcer le scan des entités -->
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
        </properties>
    </persistence-unit>
</persistence>